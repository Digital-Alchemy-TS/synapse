{
  "type": "module",
  "name": "@digital-alchemy/synapse",
  "repository": "https://github.com/Digital-Alchemy-TS/synapse",
  "homepage": "https://docs.digital-alchemy.app/Synapse",
  "version": "26.1.11",
  "scripts": {
    "start:mock": "tsx src/mock/main.mts",
    "dev": "tsx src/demo/main.mts",
    "build": "rm -rf dist; tsc",
    "test": "vitest --no-file-parallelism",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "upgrade": "yarn up '@digital-alchemy/*'",
    "act": "act pull_request",
    "db:generate": "drizzle-kit generate",
    "db:generate:sqlite": "DATABASE_TYPE=sqlite drizzle-kit generate",
    "db:generate:postgresql": "DATABASE_TYPE=postgresql drizzle-kit generate",
    "db:generate:mysql": "DATABASE_TYPE=mysql drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:init": "tsx scripts/generate-migration.mts"
  },
  "author": {
    "url": "https://github.com/zoe-codez",
    "name": "Zoe Codez"
  },
  "files": [
    "dist/**/*",
    "migrations",
    "!dist/demo/**/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.mjs"
  },
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "mysql2": "^3.16.2",
    "postgres": "^3.4.8"
  },
  "peerDependencies": {
    "@digital-alchemy/core": "*",
    "@digital-alchemy/hass": "*",
    "dayjs": "*",
    "uuid": "*"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.6.2",
    "@digital-alchemy/core": "^26.1.9",
    "@digital-alchemy/hass": "^25.11.27",
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "bun": "^1.3.8",
    "bun-types": "^1.3.8",
    "dayjs": "^1.11.19",
    "drizzle-kit": "^0.31.8",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "node-cron": "^4.2.1",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "type-fest": "^5.4.3",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  },
  "packageManager": "yarn@4.12.0"
}
